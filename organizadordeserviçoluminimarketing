  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Organizador de Serviços - Lumini Marketing</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f0ff;
      margin: 0;
      padding: 20px;
      color: #333;
    }
    h1 {
      text-align: center;
      color: #6a0dad;
    }
    .container {
      max-width: 900px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    label { font-weight: bold; }
    input, textarea, select {
      width: 100%;
      padding: 8px;
      margin: 5px 0 15px;
      border: 1px solid #aaa;
      border-radius: 8px;
    }
    button {
      width: 100%;
      padding: 12px;
      background: #8c2be3;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 10px;
      font-size: 16px;
    }
    button:hover {
      background: #6a0dad;
    }
    .card {
      background: #faf7ff;
      padding: 15px;
      border-radius: 12px;
      margin-bottom: 15px;
      border: 1px solid #e3d7fa;
    }
    .status-pago { color: green; font-weight: bold; }
    .status-nao-pago { color: red; font-weight: bold; }
  </style>
</head>
<body>
  <h1>Organizador de Serviços</h1>
  <div class="container">

    <h2>Adicionar Novo Serviço</h2>
    <label>Nome do Cliente:</label>
    <input type="text" id="cliente" />

    <label>Serviço a ser realizado:</label>
    <textarea id="servico"></textarea>

    <label>Valor:</label>
    <input type="number" id="valor" />

    <label>Status do Pagamento:</label>
    <select id="pagamento">
      <option value="pago">Pago</option>
      <option value="nao_pago">Não pago</option>
    </select>

    <button onclick="adicionar()">Salvar Serviço</button>

    <hr>

    <h2>Serviços Salvos</h2>
    <div id="lista"></div>

  </div>

  <script>
    function carregar() {
      const dados = JSON.parse(localStorage.getItem('servicos')) || [];
      const lista = document.getElementById('lista');
      lista.innerHTML = '';

      dados.forEach((item, index) => {
        lista.innerHTML += `
          <div class='card'>
            <p><b>Cliente:</b> ${item.cliente}</p>
            <p><b>Serviço:</b> ${item.servico}</p>
            <p><b>Valor:</b> R$ ${item.valor}</p>
            <p><b>Pagamento:</b> <span class="status-${item.pagamento === 'pago' ? 'pago' : 'nao-pago'}">${item.pagamento === 'pago' ? 'Pago' : 'Não pago'}</span></p>
            <button onclick="deletar(${index})">Excluir</button>
          </div>
        `;
      });
    }

    function adicionar() {
      const cliente = document.getElementById('cliente').value;
      const servico = document.getElementById('servico').value;
      const valor = document.getElementById('valor').value;
      const pagamento = document.getElementById('pagamento').value;

      if (!cliente || !servico || !valor) {
        alert('Preencha todos os campos!');
        return;
      }

      const dados = JSON.parse(localStorage.getItem('servicos')) || [];

      dados.push({ cliente, servico, valor, pagamento });
      localStorage.setItem('servicos', JSON.stringify(dados));

      document.getElementById('cliente').value = '';
      document.getElementById('servico').value = '';
      document.getElementById('valor').value = '';

      carregar();
    }

    function deletar(index) {
      const dados = JSON.parse(localStorage.getItem('servicos')) || [];
      dados.splice(index, 1);
      localStorage.setItem('servicos', JSON.stringify(dados));
      carregar();
    }

    carregar();
  </script>
</body>
</html>
